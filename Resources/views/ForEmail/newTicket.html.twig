{% extends 'DyweeTicketBundle:ForEmail:template.html.twig' %}

{% block title %}
    Une réponse à un ticket a été postée
{% endblock %}

{% block body %}
    <b>Message envoyé par {{ user.completeName }}</b>
    <br>
    Le {{ ticket.createdAt|date("d-m-Y") }}
    <br>
    <br>
    <b>Message :</b>
    <br>
    {{ ticket.content|raw }}
{% endblock %}