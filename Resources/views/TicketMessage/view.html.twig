{# DyweeTicketBundle:TicketMessage:view.html.twig #}

{% if app.user == message.sendedBy %}
    {% set class = 'col-md-10 col-md-offset-2' %}
{% else %}
    {% set class='col-md-10' %}
{% endif %}
<div class="{{ class }}">
    <div class="panel panel-default">
        <div class="panel-body">
            {{ message.content|raw }}
        </div>
        <div class="panel-footer">
            par {{ message.sendedBy.completeName }}
            <span class="pull-right">
                {{ message.sendedAt|date('d/m/Y à H:i') }}
                {#{% if message.seenAt is not null %}
                Lu <small>le {{ message.seenAt|date('d/m/Y à H\\hi') }}</small>
                {% else %}
                    Non lu
                {% endif %}#}
        </span>
        </div>
    </div>
</div>
